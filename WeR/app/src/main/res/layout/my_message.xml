<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_studentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:layout_alignParentEnd="true"
        android:text="20130039"/>


    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_studentID"
        android:background="@drawable/my_message"
        android:elevation="2dp"
        android:layout_alignEnd="@+id/tv_studentID"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_gpsLat"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@+id/tv_message"
        android:layout_alignTop="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:text="35.001"/>

    <TextView
        android:id="@+id/tv_gpsLong"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@+id/tv_message"
        android:layout_alignBottom="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:text="35.001"/>

</RelativeLayout>