<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_studentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:layout_alignParentEnd="true"
        android:text="20130039"
        android:textSize="8sp"/>


    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_studentID"
        android:layout_alignEnd="@+id/tv_studentID"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/my_message"
        android:elevation="2dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textColor="#fff"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_gpsLat"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_message"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_toStartOf="@+id/tv_message"
        android:layout_toLeftOf="@+id/tv_message"
        android:paddingBottom="4dp"
        android:gravity="right"
        android:text="35.6804"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/tv_gpsLong"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_message"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_toStartOf="@+id/tv_message"
        android:layout_toLeftOf="@+id/tv_message"
        android:paddingBottom="4dp"
        android:gravity="right"
        android:text="139.001"
        android:textSize="8sp" />

</RelativeLayout>