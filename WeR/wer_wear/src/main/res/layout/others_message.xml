<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_studentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="20130039"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_studentID"
        android:layout_alignStart="@+id/tv_studentID"
        android:background="@drawable/others_message"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:elevation="2dp"
        android:textSize="10sp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/tv_gpsLat"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_message"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tv_message"
        android:paddingBottom="4dp"
        android:text="35.001"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/tv_gpsLong"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_message"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@+id/tv_message"
        android:paddingBottom="4dp"
        android:text="35.001"
        android:textSize="8sp" />
</RelativeLayout>